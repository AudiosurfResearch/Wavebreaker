// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

//Change this!
datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id          Int     @id @default(autoincrement())
  username    String  @unique
  steamid64   BigInt  @unique
  steamid32   Int     @unique
  locationid  Int     @default(1)
  accountType Int     @default(1) // 1 = regular, 2 = Moderator, 3 = Wavebreaker Team
  scores      Score[]
  shouts      Shout[]

  //pray this doesn't implode
  friends  User[] @relation("friends")
  friendOf User[] @relation("friends")
}

model Song {
  id     Int     @id @default(autoincrement())
  title  String
  artist String
  scores Score[]
  shouts Shout[]
}

model Score {
  id            Int      @id @default(autoincrement())
  userId        Int
  player        User     @relation(fields: [userId], references: [id])
  leagueId      Int
  trackShape    String
  xstats        String
  density       Int
  vehicleId     Int
  score         Int
  rideTime      DateTime @default(now()) //NOTE: When sending to the game, get it as UNIX time, divide by 1000 and Math.floor it
  feats         String
  songLength    Int
  goldThreshold Int
  iss           Int
  isj           Int
  song          Song     @relation(fields: [songId], references: [id])
  songId        Int
}

model Shout {
  id          Int      @id @default(autoincrement())
  authorId    Int
  author      User     @relation(fields: [authorId], references: [id])
  songId      Int
  song        Song     @relation(fields: [songId], references: [id])
  content     String
  timeCreated DateTime @default(now())
}
