// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id           Int     @id @default(autoincrement())
  username     String  @unique
  steamid64    Int     @unique
  steamid32    Int     @unique
  locationid   Int
  gamePassword String
  accountType  Int     @default(1) // 1 = regular, 2 = Moderator, 3 = Wavebreaker Team
  scores       Score[]
}

model Song {
  id     Int     @id @default(autoincrement())
  title  String
  artist String
  scores Score[]
}

model Score {
  id            Int      @id @default(autoincrement())
  userId        Int
  player        User     @relation(fields: [userId], references: [id])
  leagueId      Int
  trackShape    String
  xstats        String
  density       Int
  vehicleId     Int
  score         Int
  rideTime      DateTime @default(now()) //NOTE: When sending to the game, get it as UNIX time, divide by 1000 and Math.floor it
  feats         String
  songLength    Int
  goldThreshold Int
  iss           Int
  isj           Int
  song          Song     @relation(fields: [songId], references: [id])
  songId        Int
}
